{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/admin(/?$)",
      "dest": "/admin.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    // 优先处理静态文件
    {
      "src": "/(.*\\.(css|js|png|jpg|gif|svg|ico|json))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/$1"
    },
    // SPA 回退规则
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
